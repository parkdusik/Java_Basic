package ch02.quiz_if;
/*
14. 369게임의 일부를 작성해보자. 1~99까지의 정수를 입력받고 수에 3,6,9중 하나가 있는
경우에는 “박수짝”, 두 개 있는 경우는 “박수 짝짝”, 하나도 없으면 “박수 없음”을 출력하는
프로그램을 작성하라. 예를 들면, 13인 경우 “박수짝”, 36인 경우 “박수짝짝”, 5인 경우 “박수없음”
을 출력하면 된다.
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_14 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	Scanner sc=new Scanner(System.in);
	
	System.out.println("연도가 윤년인지 알수 있는 프로그램입니다."+"\n"+"연도를 입력해주세요."+"\n"+"\n"+"입력 : ");
	int year=sc.nextInt();
	
	if(year%4==0&&!(year%100==0)){
		System.out.println(year+"년도는 윤년입니다.");
	}else if(year%4==0&&year%100 ==0&&year%400 ==0){
		System.out.println(year+"년도는 윤년입니다.");
	}else{
		System.out.println(year+"년도는 평년입니다.");
	}
	
	sc.close();
	}
}
