package ch02.quiz_if;
/*
 10. 대출금 월이자 계산 하는 프로그램을 작성하세요. 연리가 기간에 따라 다르다고 가정 한다면,
 7년 7.25%, 15년 8.5%, 30년 9.0%이다. (소수 이하는 처리하지 않는다.)
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		System.out.println("대출금 월이자 계산기 입니다.대출금과 대출 기간(년)을 입력해주세요.");
		System.out.println("대출금(원) : ");
		int loan = sc.nextInt();
		System.out.println("기간(년) : ");
		int period = sc.nextInt();
		int interest=0;
		
		if(period>=0 && period<=7) {
			interest=(int)(loan*0.0725);
		}else if(period>7 && period<=15  ) {
			interest=(int)(loan*0.085*period);
		}else if(period>15 && period<=30) {
			interest=(int)(loan*0.09*period);
		}
		System.out.println("대출금 :"+loan+"원"+"\t"+"월이자 : "+interest+"원");
		
		
		
		sc.close();
	}
}
