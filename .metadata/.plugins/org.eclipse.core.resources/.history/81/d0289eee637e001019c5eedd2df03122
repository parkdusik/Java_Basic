package ch02.quiz_if;
/*
 6. 키보드로부터 입력한 문자가 M 또는 m이면 man, W 또는 w이면 woman,
 그 외 이면 ???을 화면상에 표시하는 프로그램을 작성하세요. (if문)
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		System.out.println("성별을 입력해주세요. [남성: M][여성:W]"+"\n"+"입력 : ");
		String str=sc.next();
		char sex=str.charAt(0);
		
		if (sex=='M'||sex=='m') {
			System.out.println("man");
		}else if(sex=='W'||sex=='w') {
			System.out.println("woman");
		}
		
		
		
		sc.close();
	}
}
