package Quiz_function;

/*
21. 계산기(사칙연산) 프로그래밍 작성하세요. 함수는 덧셈, 곱셈, 뺄셈, 나눗셈 함수가
 존재 합니다. (Call By Value)

 */

import java.util.Scanner;

public class ch04_Quiz_07함수문제_21 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		
		System.out.println("수를 입력해주세요 : ");
		int Su=sc.nextInt();
		
		System.out.println("부호를 입력해주세요(+,-,*,/) : ");
		String str=sc.next();
		char buho=str.charAt(0);
		
		System.out.println("수를 입력해주세요 : ");
		int Value=sc.nextInt();
		
		Input(Su, buho, Value);
		
		sc.close();
	}
	
	public static void Input(int Su, char buho, int Value) {
		switch(buho){
			case '+' : System.out.println(Su+Value);break;
			case '-' : System.out.println(Su-Value);break;
			case '*' : System.out.println(Su*Value);break;
			case '/' : System.out.println((double)(Su/Value));
		}
	}
}
