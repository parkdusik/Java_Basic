package Quiz_function;

import java.util.Scanner;

/*
19. 어떤 수 두 개를 입력 받아 교환하는 함수 생성한다. swap 함수는 두 개의 실제 매개변수를
 전달함으로써 호출된다. (Call By Value)
 */

public class ch04_Quiz_07함수문제_19 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
	
	int[] nums=new int [2];
	
	for(int i=0; i<nums.length; i++) {
	System.out.println("수를 입력하세요");
		nums[i]=sc.nextInt();
	}
	System.out.println("현재 값     "+"a:"+nums[0]+"\t"+"b:"+nums[1]);
	swap(nums);
	System.out.println("교환된 값   "+"a:"+nums[0]+"\t"+"b:"+nums[1]);
	
	sc.close();
	}
	
	public static void swap(int[] nums) {
		int temp=nums[0];
		nums[0]=nums[1];
		nums[1]=temp;
	}
	
}
