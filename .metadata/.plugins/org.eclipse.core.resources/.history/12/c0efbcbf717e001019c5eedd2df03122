package ch02.quiz_if;
/*
 10. 임의의 정수를 입력 받아 총합과 평균을 구하세요.
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		System.out.println("대출금 월이자 계산기 입니다.대출금과 대출 기간(년)을 입력해주세요.");
		System.out.println("대출금(원) : ");
		int loan = sc.nextInt();
		System.out.println("기간(년) : ");
		int period = sc.nextInt();
		int interest=0;
		
		if(period<1) {
			interest=0;
		}else if(period>=1 && period<=7) {
			interest=(int)(loan*0.0725*period);
		}else if(period>7 && period<30  ) {
			interest=(int)(loan*0.085*period);
		}else if(period>=30) {
			interest=(int)(loan*0.09*period);
		}
		System.out.println("대출금 :"+loan+"원"+"\t"+"월이자 : "+interest+"원");
		
		
		
		sc.close();
	}
}
