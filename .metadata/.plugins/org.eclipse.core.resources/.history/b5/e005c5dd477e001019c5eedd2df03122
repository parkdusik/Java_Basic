package ch02.quiz_if;
/*
 * 버스요금이 어른 300원 청년이 200원 어린이가 100원이라고 할 때, 
입력한 인원 전체의 버스 요금을 화면상에 표시하는 프로그램을 작성하세요.
(단, 어른이 5명 이상 이면 어린이는 50원이다.) (if문)
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("버스에 탑승할 인원을 입력해주세요.");
		System.out.println("성인 : ");
		int adult=sc.nextInt();
		System.out.println("어린이 : ");
		
		int adult=0;
		int child=0;
		int adultPrice =adult*300;
		int childPrice =child*200;
		
		if(adult>=5) {
			childPrice=child*50;
		}
		
		
		
		
		
		
		sc.close();
	}
}
