package ch02.quiz_if;

public class ch02_Quiz_04반복문문제_8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		char gread='B';
		String level="회원등급";
		
		//프로그램 작성
		
		if(gread == 'A' || gread == 'a') {
			level="우수회원";
		}else if (gread == 'B' || gread == 'b') {
			level="정회원";
		}else if (gread == 'C' || gread == 'c') {
			level="일반회원";
		}else{
			level="손님";
		}
		System.out.println(level+"입니다.");
	}

}
