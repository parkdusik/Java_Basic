package ch05.object;

//Pay클래스
public class Pay {
	//멤버변수
	public String name;
	public int bongbong; //왕눈이
	public int tex; // 20000000
	public int silsu;
	
	//name=n=왕눈이, bongbong=b=20000000
	public void input(String name, int bongbong) {
		this.name=name;
		this.bongbong=bongbong;
	}
	
	public void yonsan() {
		tex=(int)(this.bongbong*0.045+0.05);
		silsu=this.bongbong-tex;
	}
	
	public void output() {
		System.out.println("name:"+this.name);
		System.out.println("bongbong:"+this.bongbong);
		System.out.println("tex:"+tex);
		System.out.println("silsu:"+silsu);
	}
}

//a.name, a.bongbong, a.tex, a.silsu
//a.input()
