package ch04.function;
/**
 * @날짜:2025. 8. 22.
 * @작성자:박두식
 * @설명: 변수 종류
 * 		-static: 변수
 * 
 */

public class Exam61 {
	public static int count=0; //<===전역 변수이기에 함수가 종료된 이후에도 데이터가 살아있음.
	public static int a=10;
	public static int b=20;
	public static int c=30;

	public static void main(String[] args) {
		sub(10);
		sub(20);
		sub(30);
	}
	public static void sub(int x) { //x=20
		//int count=0; <===지역 변수이기에 함수 호출횟수를 count에 저장하지 못하고 블락 종료와 함께 사라짐.
		System.out.println(++count);//1 
		System.out.println(x);//20
		System.out.println();
	}
}