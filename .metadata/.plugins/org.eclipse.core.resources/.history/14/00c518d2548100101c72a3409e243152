package ch05.object;

public class Pay {
	public String name;
	public int bongbong; //왕눈이
	public int tex; // 20000000
	public int silsu;
	
	//name=n=왕눈이, bongbong=b=20000000
	public void input(String n, int b) {
		name=n;
		bongbong=b;
	}
	
	public void yonsan() {
		tex=(int)(bongbong*0.045+0.05);
		silsu=bongbong-tex;
	}
	
	public void output() {
		System.out.println("name:"+name);
		System.out.println("bongbong:"+bongbong);
		System.out.println("tex:"+tex);
		System.out.println("silsu:"+silsu);
	}
}

//a.name, a.bongbong, a.tex, a.silsu
//a.input()
