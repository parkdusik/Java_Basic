package ch02.control;

/**
 * @날짜:2025. 8. 20.
 * @작성자:박두식
 * @설명:제어문 - 조건문(if, switch ~case) / 반복문(for, while, do~while)
 * 		제어문 - 반복문(while, do~while)
 * 		제어문 - while
 */

public class Exam27 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//열단위 출력
		for(int i=2;i<=9;i++) { 	//  2   3   4 ... 9
			for(int j=1;j<=9;j++) { // 1~9 1~9 1~9
				System.out.println(i+"*"+j+"="+(j*i));
			}
			System.out.println();
		}
		System.out.println();
		
		//행단위 출력
		System.out.println("\t\t\t\t 구구단");
		for(int i=2;i<=9;i++) {
			System.out.print(i+"단"+"\t\t");
		}
		System.out.println();
		
		for(int i=1;i<=9;i++) {//	  1   2 3 ~9
			for(int j=2;j<=9;j++) {//2~9 2~9
				System.out.print(j+"*"+i+"="+(j*i)+"\t\t");
			}
			System.out.println();
		}
	}

}
