package ch02.quiz_if;
/*
15. 다음은 사칙연산 프로그램이다. 아래의 출력화면 보고 프로그램을 작성하세요. 
 */

import java.util.Scanner;


public class ch02_Quiz_05제어문문제_15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		
		restart: while(true) {
		System.out.println("사칙연산 계산기입니다. 숫자를 입력해주세요 : ");
		int num=sc.nextInt();
		
		System.out.println("연산기호 +,-,*,/ 중 하나를 입력해주세요 : ");
		String arithInput=sc.next();
		
		System.out.println("다음 숫자를 입력해주세요 : ");
		int num2=sc.nextInt();
		
		switch(arithInput) {
		case "+": System.out.println(num+num2);break;
		case "-": System.out.println(num-num2);break;
		case "*": System.out.println(num*num2);break;
		case "/": System.out.println((double)(num/num2));break;
		default : continue restart;
		}
		
		}
	}
	sc.close();
}
