package ch01.dataType;
/*
 * 6. 논리 연산자 : &(and), |(or), ^(xor)(이진 논리 연산자)
 * 				&&, ||)(일반 논리 연산자)
 * 
 * 				and = ex) a랑 b '둘다' 조건 충족해야 true
 * 				or = ex) a랑 b 둘중 '하나라도' 조건 충족해도 true
 * 				xor = ex) a랑 b 둘중 '하나만' 조건을 충족해야 true
 * 
 * 				&& : 왼쪽이 false면 오른쪽을 평가하지 않고 false
 * 				|| : 왼쪽이 true면 오른쪽도 true
 * 
 * 			*논리 연산자의 true =  1
 * 			*2비트로 변환하여 계산
 * */

public class Exam08 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		byte a =10;
		byte b =2;
		//10 : 0000 1010
 		//2 : 0000 0010
		
		System.out.println("a&b"+(a&b)); // & : 0000 0010 >>2
		System.out.println("a&b"+(a|b)); // | : 0000 1010 >>10
		System.out.println("a&b"+(a^b)); // ^ : 0000 1000 >>8
		
		int x=15;
		boolean y=x>10 && x<20; //15>10 1 && 1 15<20   ==> true
		boolean z=x==10 || x==15; // 15==10 0 || 1 15==15  ==> true
		System.out.println("x&&y:"+y);
		System.out.println("x||y:"+z);
		
		

	}

}
