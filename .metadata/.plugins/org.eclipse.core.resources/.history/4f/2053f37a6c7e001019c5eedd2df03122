package ch02.quiz_if;
/*
 9. 키보드로부터 정수3개를 입력 받아서 a, b, c 에 저장한 후 가장 큰 값을 출력하세요. 
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_09 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("정수3개를 입력시 가장 큰 값을 출력합니다. 숫자를 입력해주세요.");
		System.out.println("첫번째 정수:");
		int a=sc.nextInt();
		System.out.println("두번째 정수:");
		int b=sc.nextInt();
		System.out.println("세번째 정수:");
		int c=sc.nextInt();
		
		int max=0;
		int[] nums= {a, b, c};
		
		for(int i=0; i<nums.length;i++) {
			if(nums[i]>max) {
				max=nums[i];
			}else if(nums[i]<0){
				System.out.println(nums[i]+"번째 숫자는 정수가 아닙니다.");
			}
		}
		if(max>0) {
			System.out.println("입력한 숫자 중 가장 큰 숫자는 ["+max+"] 입니다.");
		}else if(max<0) {
			System.out.println("정수가 없어 계산할 수 없습니다.");
		}else(max) {
			System.out.println("정수가 없어 계산할 수 없습니다.");
		}
		
		
		
		
		
		
		
		sc.close();
	}
	
}
