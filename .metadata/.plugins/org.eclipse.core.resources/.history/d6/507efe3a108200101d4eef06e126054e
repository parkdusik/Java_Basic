	package Quiz_function;

	/*
	22. 1부터 999까지의 100개의 임의의 수로 이루어진 배열이 주어졌을 때, 다음 기능의 함수들을
	각각 구현한다. 배열을 생성할 때, (Call By Value, Call By Value ~ Return)
	 */

	public class ch04_Quiz_07함수문제_22 {

		public static void main(String[] args) {
			int[] array=new int[100];
			for(int i=0; i<array.length;i++) {
				array[i]=i+20;
			}
			
			funA(array); //배열의 수들을 한줄에 10개씩 출력하는 함수
			funB(array); //홀수들만 출력하는 함수
			funC(array); //인덱스가 홀수인 수들을 출력하는 함수
			
			int eventCnt=funD(array);//짝수 개수를 반환하는 함수
			int eventSum=funE(array);//배열의 수들의 합을 반환하는 함수
			int eventMin=funF(array);//가장 작은 수의 위치(인덱스)를 반환하는 함수
			int eventMax=funG(array);//가장 큰수의 위치를 반환하는 함수
			
			System.out.println();
			System.out.println("짝수의 개수: " +eventCnt);
			System.out.println("배열의 수들의 합: " +eventSum);
			System.out.println("가장 작은 수의 위치: " +eventMin);
			System.out.println("가장 큰 수의 위치: " +eventMax);
			
			funH(array);
		}
		
		public static void funA(int [] array) {
			System.out.println("한줄에 10개씩 출력 --------------------");
			for(int i=0; i<array.length; i++) {
				System.out.print(array[i]+"\t");
				if(i%10==9) {
					System.out.print("\n");
				}
			}
		}
		
		public static void funB(int [] array) {
			System.out.println("홀수들만 출력 --------------------"); 
			
			for(int i=0; i<array.length; i++) {
				if(array[i]%2==1) {
				System.out.print(array[i]+"\t");
				if(i%10==9) {
					System.out.print("\n");
					}
				}
			}
			
		}
		
		public static void funC(int [] array) {
			System.out.println("인덱스가 홀수인 수들을 출력 --------------------"); 
			
			for(int i=0; i<array.length; i++) {
				if(i%2==1) {
				System.out.print(array[i]+"\t");
				if(i%10==9) {
					System.out.print("\n");
					}
				}
			}
			
		}
		
		public static int funD(int [] array) {
			int cnt=0;
			for(int i=0; i<array.length; i++) {
				if(array[i]%2==0) {
					cnt++;
				}
			}
			return cnt;
			
		}
		
		public static int funE(int [] array) {
			int sum=0;
			for(int i=0; i<array.length; i++) {
				sum+=array[i];
			}
			return sum;
		}

		public static int funF(int [] array) {
			int min=0;
			for(int i=0; i<array.length; i++) {
				if(min>array[i]) {
					min=i;
				}
			}
			return min;
		}
		
		public static int funG(int [] array) {
			int max=0;
			for(int i=0; i<array.length; i++) {
				if(max<array[i]) {
					max=i;
				}
			}
			return max;
		}
		
		public static int funH(int [] array) {
			int[] pnum=new int[100];
			int cnt=0;
			for(int i=0; i<array.length; i++) {
				if(array[i]>=0) {
					pnum[i]=array[i];
					cnt++;
				}
			}
			
			System.out.println("양수의 수 : " + cnt);
			return cnt;
		}
		
	
	}
