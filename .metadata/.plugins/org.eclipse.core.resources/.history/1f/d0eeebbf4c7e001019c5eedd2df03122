package ch02.quiz_if;
/*
 몸무게와 키를 입력 받아 그 사람이 다이어트가 필요한지를 결정하는 프로그램을 작성하세요.
 (단, 몸무게>(키-100)*0.9 이면 다이어트가 필요한 것으로 한다.) (if문)
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("다이어트 필요여부를 체크해드립니다. 키와 몸무게를 입력해주세요.");
		System.out.println("키를 입력해주세요 : ");
		int height=sc.nextInt();
		System.out.println("몸무게를 입력해주세요 : ");
		int weight=sc.nextInt();
		
		if(weight>(height-100)*0.9){
			System.out.println();
		}
		
		
		
		
		sc.close();
	}
}
