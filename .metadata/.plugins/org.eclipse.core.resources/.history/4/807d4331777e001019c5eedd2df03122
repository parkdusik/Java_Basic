package ch02.quiz_if;
/*
13. 연도를 입력 받아 윤년인지 아닌지를 구별하는 프로그램을 작성해 보자.
 윤년은 일반적으로 4년에 한번씩 돌아오는데 그 중 100으로 나누어 떨어지는 해는
 윤년이 아니다. 그러나 100으로 나누어 떨어지는 해 중 400으로 나누어 떨어지는
 해는 윤년이다
 */

import java.util.Scanner;

public class ch02_Quiz_05제어문문제_13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		System.out.println("10개의 정수를 입력 받아"+"\n"+"양수와 음수의 개수를 구하는 프로그램 입니다."+"\n");
		
		int yang=0;
		int um=0;
		
		for(int i=1; i<=10;i++) {
			System.out.println(i+"번째 수를 입력하세요."+"\t"+"입력 : ");
			int num= sc.nextInt();
			if(num>=0) {
				++yang;
			}else if(num<0) {
				++um;
			}
		};
		
		System.out.println("양수의 개수는 : "+yang+"개"+"\n"+"음수의 개수는 : "+um+"개");
		
		sc.close();
	}
}
